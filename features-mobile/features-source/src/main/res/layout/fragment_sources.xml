<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SourcesFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/background_splash_screen"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:id="@+id/layout_news_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:gravity="center">

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp" />

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp" />

            <TextView
                android:layout_width="136dp"
                android:layout_height="28dp"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/sources"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/btn_start_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:padding="10dp"
                android:src="@drawable/ic_search_icon" />

            <ImageView
                android:id="@+id/btn_start_filter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:padding="10dp"
                android:src="@drawable/ic_filter_icon" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sources_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_news_post"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:id="@+id/sources_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/primary"
        android:indeterminateTintMode="src_atop"
        android:progressTint="@color/primary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sources_rv"
        app:layout_constraintTop_toTopOf="@+id/sources_rv" />
</androidx.constraintlayout.widget.ConstraintLayout>